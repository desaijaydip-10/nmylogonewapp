<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">




<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:paddingBottom="30sp">


    <TextView
        android:id="@+id/emailtextView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/semi"
        android:text="Email"
        android:textSize="16dp"
        android:textColor="#D9000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textColor="#D87234"
        app:layout_constraintStart_toEndOf="@+id/emailtextView22"
        app:layout_constraintTop_toTopOf="@+id/emailtextView22" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="30dp"
        app:hintEnabled="false"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintTop_toBottomOf="@+id/emailtextView22">



        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/forgotEditTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"
            android:fontFamily="@font/semi"
            android:textColor="@color/edittextcolor"
            android:inputType="textEmailAddress"
            android:textCursorDrawable="@drawable/color_cursor"
            android:hint="pi.idea2code@gmail.com"/>

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/forgotloginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_background"
        android:fontFamily="@font/bold"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:inputType="textPersonName"
        android:padding="15sp"
        android:layout_marginRight="30sp"
        android:layout_marginLeft="30sp"
        android:text="Forgot password"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/emailtext" />



        <TextView
            android:id="@+id/canceltextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:background="@drawable/sign_background"
             android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>