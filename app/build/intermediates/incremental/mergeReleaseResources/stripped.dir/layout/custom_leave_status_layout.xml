<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/startLeaveDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/leavetextsieze"
            android:text="TextView"
            android:textColor="#444150"
            android:textSize="@dimen/leavetextsieze"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/DashTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="@dimen/leavetextsieze"
            app:layout_constraintEnd_toStartOf="@id/DashTextView"
            app:layout_constraintStart_toEndOf="@+id/startLeaveDateTextView"
            app:layout_constraintTop_toTopOf="@+id/startLeaveDateTextView" />


        <TextView
            android:id="@+id/endLeaveDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="TextView"
            android:textColor="#444150"
            android:textSize="@dimen/leavetextsieze"
            app:layout_constraintStart_toEndOf="@+id/DashTextView"
            app:layout_constraintTop_toTopOf="@+id/DashTextView" />


        <TextView
            android:id="@+id/leaveTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="3dp"
            android:text="TextView"
            android:textColor="#A8A6A7"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/startLeaveDateTextView" />

        <TextView
            android:id="@+id/leaveDayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:paddingBottom="3dp"
            android:text="TextView"
            android:textColor="#A8A6A7"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/leaveTypeTextView"
            app:layout_constraintTop_toTopOf="@+id/leaveTypeTextView" />

        <ImageView
            android:id="@+id/statusImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pending_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="262dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>