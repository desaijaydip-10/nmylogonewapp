<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="30dp"
    android:background="#FFFFFF"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textview_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are You Sure ?"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textSize="19dp"
            android:textColor="#444150"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/view_horiztontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:background="#3C3C43"
            app:layout_constraintTop_toBottomOf="@+id/textview_sure" />


        <View
            android:id="@+id/view_"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="#3C3C43"
            android:rotation="360"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_horiztontal" />


        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@android:color/transparent"
            android:text="no"
            android:textColor="#D87234"


            app:layout_constraintRight_toLeftOf="@+id/view_"
            app:layout_constraintTop_toTopOf="@+id/view_horiztontal" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@android:color/transparent"
            android:text="yes"
            android:textColor="#D87234"
            app:layout_constraintLeft_toRightOf="@+id/view_"
            app:layout_constraintTop_toTopOf="@id/view_horiztontal" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>