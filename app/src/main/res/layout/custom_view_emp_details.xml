<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="22dp"
    android:layout_marginLeft="22dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leave Type"
            android:layout_marginLeft="13dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/leaveTyepetextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"

            app:layout_constraintStart_toStartOf="@+id/textView36"
            app:layout_constraintTop_toBottomOf="@+id/textView36" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="19dp"
            android:background="#F0F0F0"
            app:layout_constraintTop_toBottomOf="@+id/leaveTyepetextView" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18sp"
            android:text="Duration"
            android:layout_marginLeft="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            tools:layout_editor_absoluteX="1dp" />

        <TextView
            android:id="@+id/FirstDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22 Sep, 2021 "
            app:layout_constraintStart_toStartOf="@+id/textView38"
            app:layout_constraintTop_toBottomOf="@+id/textView38" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To "
            app:layout_constraintStart_toEndOf="@+id/FirstDateTextView"
            app:layout_constraintTop_toBottomOf="@+id/textView38" />

        <TextView
            android:id="@+id/EndDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 Sep, 2021"
            app:layout_constraintStart_toEndOf="@+id/textView40"
            app:layout_constraintTop_toTopOf="@+id/textView40" />


        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="19dp"
            android:background="#F0F0F0"
            app:layout_constraintTop_toBottomOf="@+id/EndDateTextView" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration of Day"
            android:layout_marginLeft="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view4" />

        <TextView
            android:id="@+id/durationDaetTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/textView42"
            app:layout_constraintTop_toBottomOf="@+id/textView42" />


        <View
            android:id="@+id/view8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="19dp"
            android:background="#F0F0F0"
            app:layout_constraintTop_toBottomOf="@+id/durationDaetTextView" />

        <TextView
            android:id="@+id/textView44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reason"
            android:layout_marginTop="18sp"
            android:layout_marginLeft="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view8" />

        <TextView
            android:id="@+id/reasoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Family Function"
            app:layout_constraintStart_toStartOf="@+id/textView44"
            app:layout_constraintTop_toBottomOf="@+id/textView44" />



        <TextView
            android:id="@+id/lateentryButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/button_bg"
            android:text="Decline"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:gravity="center"
            android:textAlignment="center"
            android:fontFamily="@font/semi"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintRight_toLeftOf="@+id/rightentryButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reasoneTextView" />


        <TextView
            android:id="@+id/rightentryButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/button_bg_custom"
            android:fontFamily="@font/semi"
            android:text="Aceept"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"

            app:layout_constraintLeft_toRightOf="@+id/lateentryButton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/lateentryButton" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>