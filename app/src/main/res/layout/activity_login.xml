    <TextView
        android:id="@+id/emailtextView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="60dp"
        android:text="Email"
        android:fontFamily="@font/semi"
        android:textSize="16dp"
        android:textColor="#D9000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="*"
        android:textColor="#D87234"
        app:layout_constraintStart_toEndOf="@+id/emailtextView22"
        app:layout_constraintTop_toTopOf="@+id/emailtextView22" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailtextinputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="30dp"
        app:hintEnabled="false"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintTop_toBottomOf="@+id/emailtextView22">



        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/EditTextName11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"
            android:fontFamily="@font/regular"
            android:textColor="@color/edittextcolor"
            android:inputType="textEmailAddress"
            android:textCursorDrawable="@drawable/color_cursor"
            android:hint="abcd@gmail.com"/>

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/passwordeditTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Password"
        android:textSize="16dp"
        android:textColor="#D9000000"
        android:fontFamily="@font/semi"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintStart_toStartOf="@+id/emailtextView22"
        app:layout_constraintTop_toBottomOf="@+id/emailtextinputLayout"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textColor="#D87234"
        android:src="@drawable/ic_baseline_star_24"
        app:layout_constraintStart_toEndOf="@+id/passwordeditTextText"
        app:layout_constraintTop_toTopOf="@+id/passwordeditTextText" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinputLayoutpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="30dp"
        app:hintEnabled="false"
        app:boxStrokeWidth="0dp"
        app:passwordToggleEnabled="true"
        app:boxStrokeWidthFocused="0dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintTop_toBottomOf="@+id/passwordeditTextText">



        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordtextEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"
            android:fontFamily="@font/regular"
            app:passwordToggleTint="@color/black"
            android:textColor="@color/edittextcolor"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/color_cursor"
            android:hint="your password"/>

    </com.google.android.material.textfield.TextInputLayout>


